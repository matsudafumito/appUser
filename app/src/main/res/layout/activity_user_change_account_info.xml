<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff00"
    tools:context=".UserChangeAccountInfo">


    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:text="アカウント情報変更"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="322dp"
        android:layout_height="match_parent"
        android:layout_marginTop="92dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/errorDisplay"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="50dp"
            android:text="アカウント情報が取得できませんでした"
            android:textColor="#ff0000"
            android:visibility="invisible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="ユーザネーム" />

        <EditText
            android:id="@+id/textBoxUserName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#efefef"
            android:backgroundTint="#efefef"
            android:paddingTop="3dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="誕生日" />

        <EditText
            android:id="@+id/textBoxUserBirthday"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#efefef"
            android:backgroundTint="#efefef"
            android:paddingTop="3dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="性別" />

        <EditText
            android:id="@+id/textBoxUserGender"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#efefef"
            android:backgroundTint="#efefef"
            android:paddingTop="3dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="メールアドレス" />

        <EditText
            android:id="@+id/textBoxUserEmail"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#efefef"
            android:backgroundTint="#efefef"
            android:paddingTop="3dp"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:text="住所" />

        <EditText
            android:id="@+id/textBoxUserAddress"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#efefef"
            android:backgroundTint="#efefef"
            android:paddingTop="3dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:backgroundTint="#efefef"
            android:text="送信"
            android:textColor="#555555" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonResign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="248dp"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="16dp"
        android:padding="0dp"
        android:backgroundTint="#ff0000"
        android:text="アカウント削除"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>